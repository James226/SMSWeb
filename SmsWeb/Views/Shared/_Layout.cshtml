<!DOCTYPE html>
<html ng-app="smsApp">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>SMS Web</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body ng-controller="mainController">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("SMS Web", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="/#/">Home</a></li>
                    <li><a href="/#/send">Send</a></li>
                    <li><a href="/#/inbox">Inbox</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div id="main">
            @RenderBody()
        </div>
        <hr />
        <footer style="color: lightgray">
            <p>&copy; @DateTime.Now.Year - James Parker</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/angular.js")
    @Scripts.Render("~/Scripts/angular-route.js")
    @Scripts.Render("~/Scripts/angular-animate.js")
    @RenderSection("scripts", required: false)
</body>
</html>
